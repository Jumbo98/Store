{
  "name": "Store",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8.9.4",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.8.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5",
    "sqlite3": "^5.1.7"
  },
  "scripts": {
    "sqlite-deploy": "cds deploy --to sqlite:db.sqlite",
    "start": "npm run sqlite-deploy && cds serve --port 4004",
    "start:prod": "NODE_ENV=production cds-serve",
    "watch-project1": "cds watch --open project1/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy Store --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "model": ["db"]
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "build": {
      "target": "gen",
      "tasks": [
        {
          "for": "hana",
          "src": "db"
        },
        {
          "for": "nodejs",
          "src": "srv"
        },
        {
          "for": "sqlite",
          "src": "db"
        }
      ]
    }
  },
  "sapux": [
    "app/project1"
  ]
}